#!/usr/bin/env python

import click

import sys
import os.path
# Import from sibling directory ..\api
sys.path.append(os.path.dirname(os.path.abspath(__file__)) + "/..")

import src.main

curdir = os.getcwd() + '/'

@click.command()
@click.option('-m', type=click.Choice(['general', 'bishop']), help="Calculates Factor of Saftey.")
@click.argument('config_file')
@click.argument('data_file')
def fos(m, config_file, data_file):
    """
    Usage:

    fos -m[general|bishop] [config_file] [data_file]
    """
    config = curdir + config_file
    data = curdir + data_file
    src.main.fos(m, config_file, data_file)

if __name__ == '__main__':
    fos()
